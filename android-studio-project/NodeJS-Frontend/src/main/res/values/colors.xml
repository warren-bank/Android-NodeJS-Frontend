<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- ===== Common Definitions ===== -->

  <!-- Node.js branding -->
  <!--   https://brandcolors.net/b/node-js -->
  <color name="nodeJsAccent">#539E43</color>
  <color name="nodeJsPrimaryDark">#44883E</color>
  <color name="nodeJsPrimary">#6CC24A</color>
  <!-- similar -->
  <color name="green_light">#E8FFE8</color>

  <!-- grayscale -->
  <color name="white">#FFFFFF</color>
  <color name="gray_lighter">#F6F6F6</color>
  <color name="gray_light">#EEEEEE</color>
  <color name="gray_medium">#858585</color>
  <color name="gray_dark">#333333</color>
  <color name="black">#000000</color>

  <!-- alpha channel -->
  <color name="white_translucent">#C0FFFFFF</color>

  <!-- ===== Application ===== -->

  <color name="colorAccent">@color/nodeJsAccent</color>
  <color name="colorPrimaryDark">@color/nodeJsPrimaryDark</color>
  <color name="colorPrimary">@color/nodeJsPrimary</color>
  <color name="colorOnPrimary">@color/white</color>
  <color name="colorOnPrimary_translucent">@color/white_translucent</color>
  <color name="colorSecondary">@color/gray_lighter</color>
  <color name="colorOnSecondary">@color/gray_dark</color>

  <!-- ===== Toolbar Overflow Menu ===== -->

  <color name="popupBackground">@color/gray_light</color>
  <color name="popupText_disabled">@color/gray_medium</color>
  <color name="popupText_enabled">@color/colorPrimaryDark</color>

  <!-- ===== MainActivity ===== -->

  <color name="tabIndicator">@color/colorAccent</color>

  <!-- ===== AbstractTabFragment ===== -->

  <color name="fragmentListItemDivider">@color/gray_medium</color>
  <color name="fragmentListItemOnDaemonRunning">@color/green_light</color>
  <color name="fragmentListItemOnRowClear">@color/white</color>
  <color name="fragmentListItemOnRowSelected">@color/gray_lighter</color>

  <color name="DialogLabelBackground">@color/gray_light</color>
  <color name="DialogLabelText">@color/colorPrimaryDark</color>
</resources>
