<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.github.warren_bank.nodejs_frontend">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
    android:theme="@style/AppTheme"
    android:label="@string/app_name"
    android:icon="@mipmap/launcher"
    android:allowBackup="false"
    android:supportsRtl="true">

    <activity
      android:name=".ui.activity_main.MainActivity"
      android:theme="@style/AppTheme"
      android:label="@string/app_name"
      android:configChanges="colorMode|density|fontScale|keyboard|keyboardHidden|layoutDirection|locale|mcc|mnc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|touchscreen|uiMode"
      android:launchMode="standard">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".ui.activity_read_output.StandardOutputActivity"
      android:theme="@style/AppTheme"
      android:label="@string/app_name"
      android:configChanges="colorMode|density|fontScale|keyboard|keyboardHidden|layoutDirection|locale|mcc|mnc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|touchscreen|uiMode"
      android:launchMode="standard">
    </activity>

    <activity
      android:name="com.nbsp.materialfilepicker.ui.FilePickerActivity"
      android:theme="@style/AppTheme.MTP"
      android:configChanges="colorMode|density|fontScale|keyboard|keyboardHidden|layoutDirection|locale|mcc|mnc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|touchscreen|uiMode"
      tools:replace="android:theme" />

  </application>
</manifest>
